- extends 'base.haml'
- load i18n

- block breadcrumbs
	%ul.breadcrumb
		%li
			- include 'home_link.haml'
		%li
			%a{'href': '{% url simpleforum_index %}'}
				{% trans "Forum" %}
		%li
			%a{'href': '{% url simpleforum_add_room %}'}
				{% trans "Add room" %}

- block caption
	{% trans "Add room" %}

- block content
	{% trans "add" as form_submit_title %}
		- with form_id='add_room_form'
			- include 'simpleforum/snippets/form.haml'