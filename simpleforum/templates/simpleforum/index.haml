- extends 'base.haml'
- load i18n

- block breadcrumbs
    %ul.breadcrumb
        %li
            - include 'home_link.haml'
        %li
            %a{'href': '{% url simpleforum_index %}'}
                {% trans "Forum" %}

- block caption
    {% trans "SimpleForum" %}

- block content
    %table.rooms.forum_index
        %thead
            %tr
                %th
                    {% trans "Room" %}
        %tbody
            - if rooms
                - for room in rooms
                    %tr
                        %td
                            = room
            - else
            %tr
                %td
                    {% trans "Forum is empty" %}